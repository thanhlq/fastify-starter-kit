{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "rootDirs": [
    //   "src",
    // ],
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    // "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
  },
  "includes": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "./plugins/**/*",
    "./test/**/*",
    "./typings/**/*",
    "./dist/**/*", // This is what fixed it!
    "./migrations/**/*", // This is what fixed it!
    "**/*.spec.ts"
  ]
}