{
  "name": "nodejs-fastify-boilerplate",
  "version": "0.1.0",
  "description": "Simple / flexible fastify boilerplate",
  "main": "./dist/src/main.js",
  "types": "./dist/src/main.d.ts",
  "scripts": {
    "migrate-dev": "NODE_ENV=development ./node_modules/.bin/knex migrate:latest",
    "migrate-test": "NODE_ENV=test ./node_modules/.bin/knex migrate:latest",
    "migrate-prod": "NODE_ENV=production ./node_modules/.bin/knex migrate:latest",
    "dev": "yes | cp -rf dev.env .env && yarn docs && yarn build-api-docs-dev && NODE_ENV=development nodemon",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist build package",
    "build": "yarn lint && tsc -p tsconfig.json && yarn copyfiles && cp production.env dist/.env",
    "build-all": "yarn clean && tsc -p tsconfig.json && yarn copyfiles",
    "build-dev": "rimraf ./dist && yarn docs && yarn copyfiles && cp dev.env dist/.env && tsc -p tsconfig.json --preserveWatchOutput --pretty",
    "build-dev-watch": "rimraf ./dist && yarn docs && yarn copyfiles && cp dev.env dist/.env && tsc -p tsconfig.json --watch --preserveWatchOutput --pretty",
    "build-test": "rimraf ./dist && yarn copyfiles && cp test.env dist/.env && tsc -p test/tsconfig-test.json",
    "start-dev-ts": "yarn build-api-docs && NODE_ENV=development nodemon -r tsconfig-paths/register src/main.ts",
    "start-dev": "yes | cp -rf dev.env dist/.env && yarn build-api-docs && NODE_ENV=development node --trace-warnings dist/src/main.js",
    "start": "NODE_ENV=production node ./dist/src/main.js",
    "start-all": "yarn migrate-prod && NODE_ENV=production node ./dist/src/main.js",
    "start-test": "NODE_ENV=test nodemon",
    "lint": "./node_modules/.bin/eslint . --ext .ts,.js",
    "lint-fix": "./node_modules/.bin/eslint --fix . --ext .ts,.js",
    "copyfiles": "copyfiles public/**/*.html public/**/*.js public/**/*.css public/**/*.png config.js src/**/*.yaml src/documents/**/*.yaml src/documents/v1/**/*.yaml dist && copyfiles -a dist",
    "build-api-docs": "openapi bundle src/documents/openapi.yaml --output dist/src/documents/openapi-full.yaml",
    "build-api-docs-dev": "openapi bundle src/documents/openapi.yaml --output src/documents/openapi-full.yaml",
    "docs": "./node_modules/.bin/typedoc --out docs --entryPoints src/app.ts",
    "test": "./node_modules/.bin/concurrently  \"yarn start-test\" \"yarn test-go\"",
    "test-go": "rm -rf .env && cp test.env .env && yarn jest",
    "tap": "yarn build-test && NODE_OPTIONS=--experimental-vm-modules ./node_modules/.bin/tap --ts test/**/*.test.ts",
    "jest": "NODE_OPTIONS=--experimental-vm-modules ./node_modules/.bin/jest --verbose --runInBand --logHeapUsage",
    "jest-debug": "NODE_OPTIONS=--experimental-vm-modules node --trace-warnings ./node_modules/.bin/jest",
    "mocha-ts": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/test/**/*.ts'"
  },
  "author": "Thanh LE <thanhlq@gmail.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "ajv": "^8.9.0",
    "dotenv": "^14.0.0",
    "fastify": "^3.27.2",
    "fastify-cors": "^6.0.3",
    "fastify-formbody": "^5.2.0",
    "fastify-multipart": "^5.3.1",
    "fastify-plugin": "^3.0.1",
    "fastify-static": "^4.5.0",
    "fastify-swagger": "^4.15.0",
    "http-errors": "^2.0.0",
    "i18n": "^0.14.2",
    "json2csv": "^5.0.6",
    "knex": "^1.0.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "mysql": "^2.18.1",
    "nanoid": "^3.3.0",
    "nodemailer": "^6.7.2",
    "objection": "^3.0.1",
    "pino": "^7.8.0",
    "qs": "^6.10.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.4.1",
    "@types/mysql": "^2.15.21",
    "@types/node": "^17.0.20",
    "@types/pino": "^7.0.5",
    "@types/qs": "^6.9.7",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "assert": "^2.0.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "fastify-tsconfig": "^1.0.1",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.0",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2",
    "supertest": "^6.2.2",
    "swagger-jsdoc": "^6.1.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14.19.0"
  }
}
