{
  "name": "nodejs-fastify-boilerplate",
  "version": "0.1.0",
  "description": "Simple / flexible fastify boilerplate",
  "scripts": {
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "dev": "yarn migrate && yarn build && cross-env NODE_ENV=development nodemon dist/src/index.js | pino-pretty",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf ./dist && tsc -p tsconfig.json",
    "build:dev": "yarn copyfiles && tsc -p tsconfig.json --watch --preserveWatchOutput --pretty",
    "start:dev": "NODE_ENV=development && yarn build && yarn generate-api-docs && nodemon dist/src/index.js",
    "start": "NODE_ENV=production && yarn migrate  && node ./dist/index",
    "lint": "eslint . --ext .ts",
    "copyfiles": "copyfiles package.json src/**/*.yaml src/documents/**/*.yaml src/documents/v1/**/*.yaml dist && copyfiles -a *.env dist",
    "migrate": "./node_modules/.bin/knex migrate:latest",
    "generate-api-docs": "openapi bundle src/documents/openapi.yaml --output dist/src/documents/openapi-full.yaml"
  },
  "author": "Thanh LE <thanhlq@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/http-errors": "^1.8.2",
    "ajv": "^8.9.0",
    "dotenv": "^14.0.0",
    "fastify": "^3.27.2",
    "fastify-cors": "^6.0.3",
    "fastify-formbody": "^5.2.0",
    "fastify-multipart": "^5.3.1",
    "fastify-plugin": "^3.0.1",
    "fastify-static": "^4.5.0",
    "fastify-swagger": "^4.15.0",
    "http-errors": "^2.0.0",
    "i18n": "^0.13.4",
    "json2csv": "^5.0.6",
    "knex": "^1.0.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "mysql": "^2.18.1",
    "nanoid": "^3.3.0",
    "node-fetch": "^3.2.0",
    "nodemailer": "^6.7.2",
    "objection": "^3.0.1",
    "qs": "^6.10.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^17.0.20",
    "@types/pino": "^7.0.5",
    "@types/qs": "^6.9.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "fastify-tsconfig": "^1.0.1",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2",
    "swagger-jsdoc": "^6.1.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=12.20.0"
  }
}
