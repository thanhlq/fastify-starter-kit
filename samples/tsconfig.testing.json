{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts",
    "node_modules/lodash-es/**/*.js"
  ]
}